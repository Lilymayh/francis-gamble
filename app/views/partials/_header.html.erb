<header>
  <div class="container">
		<a href="/games">
		<img src="<%= asset_path('FrancisGamble.png') %>" alt="Francis Gamble" id="logozHeader">
</a>

<% if @current_user %>
      <p>Logged in as: <%= @current_user.email %></p>
			<%= link_to "Logout", logout_path, method: :delete, class: "logout-link" %>
    <% else %>
      <p>Not logged in</p>
    <% end %>

	 <div class="moneyContainer">
	 <h2 class="balance">Balance: <%= @current_user.balance %></h2>
	 <%= link_to "Get tokens =>", tokens_path, class: "tokens-route" %>
	 </div>
  </div>

<%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
</header>